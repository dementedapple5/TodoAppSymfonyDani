{% extends 'base.html.twig' %}
{% block body %}

<h2 class="page-header">Tareas de Daniel</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Id</th>
      <th>Titulo</th>
      <th>Fecha creacion</th>
      <th>Fecha entrega</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    {% for todo in todos %}
    <tr>
      <th scope="row">{{todo.id}}</th>
      <td>{{todo.title}}</td>
      <td>{{todo.createDate|date('d/m/Y H:i:s')}}</td>
      <td>{{todo.date|date('d/m/Y H:i:s')}}</td>
      <td>
        <a href="/todo/edit/{{todo.id}}" class="btn btn-secondary">Editar</a>
        <a href="/todo/delete/{{todo.id}}" class="btn btn-danger">Eliminar</a>
      </td>
    </tr>
    {% endfor %}
  </tbody>
</table>

{% endblock %}

